<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?><?import javafx.scene.layout.*?><?import net.mewk.ese.CodeArea?><?import org.controlsfx.glyphfont.Glyph?>
<SplitPane styleClass="noBackgroundInsets"
           dividerPositions="0.6"
           orientation="VERTICAL"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="net.mewk.ese.presenter.QueryPresenter">
    <AnchorPane minHeight="40.0">
        <ToolBar minHeight="40.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <Button id="queryButtonNew"
                    mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="FILE_ALT"/>
                </graphic>
            </Button>
            <Button id="queryButtonOpen"
                    mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="FOLDER_OPEN_ALT"/>
                </graphic>
            </Button>
            <Button id="queryButtonSave"
                    mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="FLOPPY_ALT"/>
                </graphic>
            </Button>
            <Separator/>
            <Button id="queryButtonRun"
                    mnemonicParsing="false"
                    onAction="#handleQueryRunButtonAction">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="PLAY"/>
                </graphic>
            </Button>
            <Button id="queryButtonReformat"
                    mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="CODE"/>
                </graphic>
            </Button>
        </ToolBar>
        <CodeArea fx:id="queryCodeArea"
                  AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="40.0"/>
    </AnchorPane>
    <AnchorPane minHeight="24.0">
        <ToolBar styleClass="splitPaneToolBar"
                 minHeight="24.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <Label text="Result"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="REFRESH"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="DOWNLOAD"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="CHEVRON_DOWN"/>
                </graphic>
            </Button>
        </ToolBar>
        <TabPane side="BOTTOM"
                 tabClosingPolicy="UNAVAILABLE"
                 styleClass="noBackgroundInsets"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="24.0">
            <Tab text="Table">
                <AnchorPane>
                    <TreeTableView fx:id="resultTreeTableView"
                                   showRoot="false"
                                   styleClass="noBackgroundInsets"
                                   AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0"
                                   AnchorPane.topAnchor="0.0">
                        <columns>
                            <TreeTableColumn fx:id="resultTreeTableViewNameColumn" text="Name"/>
                            <TreeTableColumn fx:id="resultTreeTableViewValueColumn" text="Value"/>
                            <TreeTableColumn fx:id="resultTreeTableViewIndexColumn" text="Index"/>
                            <TreeTableColumn fx:id="resultTreeTableViewScoreColumn" text="Score"/>
                        </columns>
                    </TreeTableView>
                </AnchorPane>
            </Tab>
            <Tab onSelectionChanged="#handleResultTabSelectionChanged" text="Raw">
                <AnchorPane>
                    <CodeArea fx:id="resultCodeArea"
                              editable="false"
                              AnchorPane.bottomAnchor="0.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0"/>
                </AnchorPane>
            </Tab>
        </TabPane>
    </AnchorPane>
</SplitPane>
